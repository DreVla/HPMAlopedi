<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/confirm_code_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:text="@string/confirm_code_text_view"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_code_text_view">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextTheme"
            android:layout_width="52dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:padding="2dp"
                android:textSize="28sp"
                tools:hint="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextTheme"
            android:layout_width="52dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:padding="2dp"
                android:textSize="28sp"
                tools:hint="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextTheme"
            android:layout_width="52dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:padding="2dp"
                android:textSize="28sp"
                tools:hint="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextTheme"
            android:layout_width="52dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:padding="2dp"
                android:textSize="28sp"
                tools:hint="5" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextTheme"
            android:layout_width="52dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:padding="2dp"
                android:textSize="28sp"
                tools:hint="7" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/EditTextTheme"
            android:layout_width="52dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:padding="2dp"
                android:textSize="28sp"
                tools:hint="9" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resend_code_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:text="@string/resend_code"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:strokeColor="@color/colorAccent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/code_confirm_button"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/confirm_text"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="24dp"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend_code_button"
        android:elevation="2dp"
        android:backgroundTint="@color/colorAccent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>